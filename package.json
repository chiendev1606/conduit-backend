{
  "name": "conduit_backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "dotenv -e apps/main-service/.env -- nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "dotenv -e apps/main-service/.env nest start",
    "start:dev": "dotenv -e apps/main-service/.env -- nest start --watch",
    "db:push": "dotenv -e apps/main-service/.env -- npx prisma db push --schema ./apps/main-service/prisma/schema.prisma",
    "db:generate": "dotenv -e apps/main-service/.env -- npx prisma generate --schema ./apps/main-service/prisma/schema.prisma",
    "start:dev:cron": "dotenv -e apps/cron-service/.env -- nest start cron-service --watch",
    "start:dev:webhooks": "dotenv -e apps/webhook-service/.env -- nest start webhook-service --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/conduit_backend/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/conduit_backend/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^11.0.6",
    "@ngneat/falso": "^7.3.0",
    "@prisma/client": "^6.4.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  },
  "prisma": {
    "seed": "dotenv -e apps/main-service/.env -- ts-node  apps/main-service/prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@conduit/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@conduit/validator(|/.*)$": "<rootDir>/libs/validator/src/$1",
      "^@conduit/decorator(|/.*)$": "<rootDir>/libs/decorator/src/$1",
      "^@conduit/interceptors(|/.*)$": "<rootDir>/libs/interceptors/src/$1"
    }
  }
}
